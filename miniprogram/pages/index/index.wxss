/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* TDesign风格主色、辅助色 */
:root {
  --td-main: #0052d9;
  --td-beige: #f5e9da;
  --td-bg: #f9fafb;
  --td-radius: 20px;
}

.container {
  width: 393px;
  min-height: 804px;
  background: var(--td-bg);
  margin: 0 auto;
  padding-bottom: 80px;
}

.main-tabs {
  margin-bottom: 0;
  border-bottom: 1.5px solid var(--td-beige);
}

.td-card-upload,
.td-card-effect,
.td-card-models,
.td-card-profile,
.td-card-recharge,
.td-card-setting {
  margin: 18px 0;
  border-radius: var(--td-radius);
  box-shadow: 0 2px 8px 0 #e5e7eb55;
  border: 1.5px solid var(--td-beige);
}

.td-card-upload,
.td-card-models {
  border: 1.5px solid #f5e9da;
  border-radius: 20px;
  background: #fff;
  box-shadow: 0 4px 16px 0 rgba(31, 38, 135, 0.08);
  margin-bottom: 20px;
  padding: 20px 18px 16px 18px;
  position: relative;
  overflow: hidden;
}
.td-card-upload::after,
.td-card-models::after {
  content: '';
  display: block;
  position: absolute;
  left: 18px;
  right: 18px;
  bottom: 0;
  height: 1px;
  background: linear-gradient(90deg, #f5e9da 0%, #fff 100%);
  opacity: 0.7;
}
.td-card-title {
  font-size: 18px;
  font-weight: 600;
  color: #222;
  margin-bottom: 12px;
  letter-spacing: 0.5px;
}
.effect-imgs {
  display: flex;
  justify-content: space-between;
  margin-top: 8px;
}
.effect-img {
  width: 80px;
  height: 100px;
  border-radius: 16px;
  margin: 0 8px;
  background: #f3f4f6;
}
.model-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12px 8px;
  margin-top: 8px;
}
.model-img {
  width: 80px;
  height: 80px;
  border-radius: 16px;
  background: #f3f4f6;
  box-shadow: 0 2px 8px 0 #e5e7eb33;
  border: 1px solid #f5e9da;
  transition: box-shadow 0.2s, border-color 0.2s;
}
.model-img:active {
  box-shadow: 0 4px 16px 0 #0052d933;
  border-color: #0052d9;
}
.profile-info {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}
.profile-avatar {
  width: 60px;
  height: 60px;
  margin-right: 16px;
}
.profile-text {
  display: flex;
  flex-direction: column;
}
.profile-nick {
  font-size: 16px;
  font-weight: 600;
  color: #222;
}
.profile-phone {
  font-size: 14px;
  color: #888;
}
.profile-btn {
  margin-top: 8px;
}
.recharge-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}
.recharge-point {
  background: #e6f0ff;
  color: var(--td-main);
  border-radius: 12px;
  padding: 2px 12px;
  font-weight: bold;
}
.recharge-packages {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}
.recharge-package {
  background: #f9fafb;
  border-radius: 14px;
  border: 1.5px solid var(--td-beige);
  padding: 12px 0 6px 0;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  transition: box-shadow 0.2s, border-color 0.2s;
}
.recharge-package:hover {
  box-shadow: 0 2px 8px 0 #0052d955;
  border-color: var(--td-main);
}
.package-point {
  font-size: 18px;
  font-weight: bold;
  color: var(--td-main);
}
.package-label {
  font-size: 12px;
  color: #888;
}
.package-price {
  font-size: 14px;
  color: #444;
}
.recharge-btn {
  margin-top: 8px;
}
.setting-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
}
.t-tabbar {
  z-index: 99;
}
.fab-plus {
  position: fixed;
  left: 50%;
  bottom: 100px;
  transform: translateX(-50%);
  z-index: 100;
}
.dialog-content {
  padding: 12px 0;
}
.dialog-model-list {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
}
.tabbar-plus {
  position: relative;
  top: -18rpx;
  background: linear-gradient(135deg, #0052d9 60%, #36b37e 100%);
  border-radius: 50%;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px 0 rgba(31, 38, 135, 0.18);
  z-index: 101;
  border: 4px solid #fff;
}
.tabbar-plus .t-icon {
  font-size: 40rpx;
  color: #fff;
}
.custom-tabbar {
  border-top: 2px solid #f5e9da;
}
.tabbar-plus-float {
  position: fixed;
  left: 50%;
  bottom: 60rpx;
  transform: translateX(-50%);
  z-index: 102;
}
.tabbar-plus-inner {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #0052d9 60%, #36b37e 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px 0 rgba(31, 38, 135, 0.18);
  border: 4rpx solid #fff;
}
.tabbar-plus-inner t-icon {
  font-size: 40rpx;
  color: #fff;
}
