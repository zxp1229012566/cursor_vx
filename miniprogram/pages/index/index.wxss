/**index.wxss**/
.page {
  background: #f7f8fa;
  min-height: 100vh;
  padding: 24rpx 24rpx 0 24rpx;
  padding-bottom: 120rpx;
}
.section {
  margin-bottom: 48rpx;
}
.effect-title, .model-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #222;
}
.effect-list {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.effect-img {
  width: 160rpx;
  height: 200rpx;
  border-radius: 24rpx;
  background: #f5e9da;
}
.model-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f5e9da;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.custom-tabbar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 100rpx;
  background: #fff;
  border-top: 2rpx solid #f5e9da;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  z-index: 100;
}
.tab-item {
  flex: 1;
  text-align: center;
  color: #64748b;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-right: 1rpx solid #f5e9da;
  border-left: 1rpx solid #f5e9da;
  background: #fff;
}
.tab-item:first-child {
  border-left: none;
}
.tab-item:last-child {
  border-right: none;
}
.tab-item.active {
  color: #0052d9;
  font-weight: 600;
  background: #f5e9da22;
  border-radius: 16rpx;
}
.fab-btn {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #0052d9 60%, #36b37e 100%);
  border-radius: 50%;
  box-shadow: 0 4px 16px 0 rgba(31, 38, 135, 0.18);
  color: #fff;
  font-size: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  top: -32rpx;
  border: 4rpx solid #f5e9da;
  z-index: 101;
}
