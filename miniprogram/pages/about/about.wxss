page {
  background-color: #F8F9FC;
  /* 使用更现代的字体 */
  font-family: "PingFang SC", "Helvetica Neue", "Microsoft YaHei", sans-serif;
}

.page-wrapper {
  min-height: 100vh;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* 页面头部样式 */
.page-header {
  background: linear-gradient(135deg, #4080FF 0%, #6A36FF 100%);
  padding: 40rpx 30rpx;
  color: #fff;
  position: relative;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(64, 128, 255, 0.2);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 放大logo */
.header-logo {
  width: 90rpx;
  height: 90rpx;
  margin-right: 16rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
}

.container {
  padding: 30rpx;
}

/* 自定义图标样式 */
.custom-icon {
  width: 40rpx;
  height: 40rpx;
}

.custom-icon-small {
  width: 32rpx;
  height: 32rpx;
}

/* 卡片部分通用样式 */
.card-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  /* 添加过渡动画 */
  transition: all 0.3s ease;
}

.card-section:hover {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 6rpx;
  height: 32rpx;
  width: 8rpx;
  background: linear-gradient(to bottom, #4080FF, #6A36FF);
  border-radius: 4rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999999;
  padding-left: 20rpx;
}

/* 应用信息部分样式 */
.app-section {
  padding-bottom: 40rpx;
}

.app-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.app-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  /* 添加过渡动画 */
  transition: transform 0.3s ease;
}

.app-logo:hover {
  transform: scale(1.05);
}

.app-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.app-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  color: #999999;
}

.app-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  /* 文字左对齐 */
  text-align: left;
}

/* 功能介绍部分样式 */
.features-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  /* 添加过渡动画 */
  transition: all 0.3s ease;
  padding: 16rpx;
  border-radius: 16rpx;
}

.feature-item:hover {
  background-color: #F8F9FC;
  transform: translateX(5rpx);
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  /* 文字左对齐 */
  text-align: left;
}

.feature-desc {
  font-size: 26rpx;
  color: #666666;
  /* 文字左对齐 */
  text-align: left;
}

/* 联系信息部分样式 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #666666;
  /* 文字左对齐 */
  text-align: left;
  /* 添加过渡动画 */
  transition: all 0.3s ease;
  padding: 12rpx;
  border-radius: 16rpx;
}

.contact-item:hover {
  background-color: #F8F9FC;
  transform: translateX(5rpx);
}

/* 版权信息样式 */
.copyright {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-top: 40rpx;
  padding: 0 30rpx;
  /* 添加过渡动画 */
  transition: opacity 0.3s ease;
}

.copyright:hover {
  opacity: 0.8;
} 