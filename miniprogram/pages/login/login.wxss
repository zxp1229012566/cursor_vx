/* login.wxss */
page {
  background-color: #F8F9FC;
  font-family: "PingFang SC", "Helvetica Neue", "Microsoft YaHei", sans-serif;
}

.page-wrapper {
  min-height: 100vh;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* 页面头部样式 */
.page-header {
  background: transparent;
  padding: 20rpx 30rpx;
  color: #333;
  position: relative;
  margin-bottom: 10rpx;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.header-logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 16rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
}

.container {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 卡片部分通用样式 */
.card-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
  align-self: flex-start;
}

.card-section:hover {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.section-header {
  margin-bottom: 24rpx;
  text-align: left;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  position: relative;
  padding-left: 20rpx;
  text-align: left;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 6rpx;
  height: 32rpx;
  width: 8rpx;
  background: linear-gradient(to bottom, #4080FF, #6A36FF);
  border-radius: 4rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999999;
  padding-left: 20rpx;
  text-align: left;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100% !important;
  border-radius: 12rpx !important;
  border: 2rpx solid #E5E5E5 !important;
  padding: 24rpx 20rpx !important;
  font-size: 28rpx !important;
  transition: all 0.3s ease !important;
}

.form-input:focus {
  border-color: #4080FF !important;
  box-shadow: 0 0 0 4rpx rgba(64, 128, 255, 0.1) !important;
}

/* 验证码输入框样式 */
.code-input-wrapper {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.code-input {
  flex: 1;
  border-radius: 12rpx !important;
  border: 2rpx solid #E5E5E5 !important;
  padding: 24rpx 20rpx !important;
  font-size: 28rpx !important;
  transition: all 0.3s ease !important;
}

.send-code-btn {
  min-width: 200rpx !important;
  border-radius: 12rpx !important;
  height: 80rpx !important;
  font-size: 24rpx !important;
}

/* 登录按钮样式 */
.login-actions {
  margin: 40rpx 0 30rpx 0;
}

.login-button {
  border-radius: 40rpx !important;
  background: linear-gradient(135deg, #4080FF 0%, #6A36FF 100%) !important;
  height: 90rpx !important;
  font-size: 32rpx !important;
  box-shadow: 0 6rpx 20rpx rgba(64, 128, 255, 0.3) !important;
  transition: all 0.3s ease !important;
}

.login-button:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 10rpx rgba(64, 128, 255, 0.2) !important;
}

/* 注册提示样式 */
.register-tip {
  text-align: center;
  font-size: 26rpx;
  color: #666666;
}

.register-link {
  color: #4080FF;
  margin-left: 10rpx;
  text-decoration: underline;
}

/* 微信登录样式 */
.wechat-login-button {
  border-radius: 40rpx !important;
  background: #07C160 !important;
  height: 90rpx !important;
  font-size: 32rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 10rpx !important;
  transition: all 0.3s ease !important;
}

.wechat-login-button:active {
  transform: scale(0.98);
}

/* 自定义图标样式 */
.custom-icon {
  width: 40rpx;
  height: 40rpx;
}

.custom-icon-small {
  width: 32rpx;
  height: 32rpx;
} 