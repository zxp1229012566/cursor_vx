page {
  background-color: #F8F9FC;
  font-family: "PingFang SC", "Helvetica Neue", "Microsoft YaHei", sans-serif;
}

.page-wrapper {
  min-height: 100vh;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* 页面头部样式 */
.page-header {
  background: linear-gradient(135deg, #4080FF 0%, #6A36FF 100%);
  padding: 40rpx 30rpx;
  color: #fff;
  position: relative;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(64, 128, 255, 0.2);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 放大logo */
.header-logo {
  width: 90rpx;
  height: 90rpx;
  margin-right: 16rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
}

.container {
  padding: 30rpx;
}

/* 自定义图标样式 */
.custom-icon {
  width: 40rpx;
  height: 40rpx;
}

.custom-icon-small {
  width: 32rpx;
  height: 32rpx;
}

/* 提示信息样式 */
.notice-bar {
  background-color: rgba(64, 128, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #4080FF;
  transition: all 0.3s ease;
}

.notice-bar:hover {
  background-color: rgba(64, 128, 255, 0.15);
  transform: translateY(-2rpx);
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-animation {
  margin-bottom: 40rpx;
}

.loading-tips {
  font-size: 28rpx;
  color: #999999;
}

/* 卡片部分通用样式 */
.card-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.card-section:hover {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 6rpx;
  height: 32rpx;
  width: 8rpx;
  background: linear-gradient(to bottom, #4080FF, #6A36FF);
  border-radius: 4rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999999;
  padding-left: 20rpx;
}

/* 结果展示样式 */
.result-display {
  width: 100%;
  height: 600rpx;
  background-color: #F5F7FA;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: inset 0 0 10rpx rgba(0, 0, 0, 0.05);
}

.result-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  transition: transform 0.5s ease;
}

.result-image:active {
  transform: scale(0.98);
}

.result-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.save-button {
  border-radius: 40rpx !important;
  background: linear-gradient(135deg, #4080FF 0%, #6A36FF 100%) !important;
  height: 90rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 10rpx !important;
  transition: all 0.3s ease !important;
}

.save-button:active {
  transform: scale(0.98);
}

.action-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

/* 分享部分样式 */
.share-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.share-button {
  flex: 1;
  border-radius: 40rpx !important;
  border-color: #4080FF !important;
  color: #4080FF !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 10rpx !important;
  transition: all 0.3s ease !important;
}

.share-button:active {
  transform: scale(0.98);
  background-color: rgba(64, 128, 255, 0.05) !important;
}

/* 返回按钮区域 */
.action-area {
  padding: 20rpx 0;
  margin-top: 20rpx;
}

.back-button {
  border-radius: 40rpx !important;
  height: 90rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 10rpx !important;
  transition: all 0.3s ease !important;
}

.back-button:active {
  transform: scale(0.98);
} 